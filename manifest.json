{
  "manifest_version": 3,
  "name": "Tab Chat",
  "version": "1.0.0",
  "description": "Chat with your current tab in a Chrome side panel using Gemini.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["activeTab", "storage", "sidePanel", "scripting"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://cdnjs.cloudflare.com/;"
  },
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_title": "Open Tab Chat" },
  "side_panel": { "default_path": "sidepanel.html" },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}